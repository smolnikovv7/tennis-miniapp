cat > src/index.css <<'EOF'
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

:root{ --page-max:420px; }
*{ box-sizing:border-box; }
html,body,#root{ height:100%; }
body{ margin:0; font-family:'Inter',system-ui,-apple-system,'Segoe UI',Roboto,Arial,sans-serif; background:linear-gradient(180deg,#f6f8fb, #f1f5ff 40%, #eef8f3); color:#0f172a; -webkit-font-smoothing:antialiased; }
.page{ max-width:var(--page-max); }

.bottom-nav{ position:sticky; bottom:0; left:0; right:0; z-index:50; }
