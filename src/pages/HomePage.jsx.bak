              <ArrowRight className="w-5 h-5 ml-3 group-hover:translate-x-1 transition-transform" />
            </Button>
          </Link>
          
          <Link to={createPageUrl('Courts')} className="group">
            <Button 
              size="lg" 
              variant="outline" 
              className="w-full sm:w-auto neo-button font-semibold px-8 py-4 rounded-2xl text-gray-700 hover:text-blue-700 border-gray-200"
            >
              <MapPin className="w-6 h-6 mr-3" />
              Найти корт
            </Button>
          </Link>
        </motion.div>

        {/* Quick Stats */}
        <motion.div 
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.6, delay: 0.8 }}
          className="grid grid-cols-3 gap-4 max-w-md mx-auto"
        >
          <div className="text-center">
            <div className="bg-white/60 backdrop-blur-lg rounded-2xl p-4 border border-gray-100 shadow-sm">
              <Users className="w-8 h-8 text-blue-600 mx-auto mb-2" />
